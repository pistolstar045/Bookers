<body>
<style type="text/css">
  body { margin: 33px;
        font-size: 13px;
        font-family: verdana,arial,helvetica,sans-serif;
        line-height: 18px;
    }

  h1 {margin: 17.42px 0px;


  }

  th {padding-bottom: 5px;
      display: table-cell;
      vertical-align: inherit;
      font-weight: bold;
      text-align: center;
  }

  td {padding-bottom: 7px;
      padding-left: 5px;
      padding-right: 5px;
      white-space: nowrap;
  }

  p {margin-bottom: 10px;
     margin-top: 0px;
  }


</style>

<h1>Books</h1>
<table>
　<thead>
  　<tr>
    　<th>Title</th>
    　<th>Body</th>
    　<th></th>
  　</tr>
　</thead>

　<tbody>
  　<% @books.each do |book| %>

 　 <tr>
    　<td align="left"><%= book.title %></td>
    　<td align="left"><%= book.body %></td>
    　<td><%= link_to "Show",book_path(book.id) %></td>
    　<td><%= link_to "Edit",edit_book_path(book.id) %></td>
    　<td><%= link_to "Destroy",destroy_book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></td>
 　 </tr>
 　 <% end %>
　</tbody>
　</table>

<h2>New book</h2>
<% if @book.errors.any? %>
　<%= @book.errors.count %>error prohibited this book from being saved:
　 <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
　<%= form_with model: @book,url: '/books', method: :post do |f| %>
　<p>Title<br>
　<%= f.text_field :title %>
  </p>
　<p>Body<br>
　<%= f.text_area :body %>
  </p>
　<p><%= f.submit 'Create Book' %></p>

　<% end %>
</body>


















































